@page "/closedtrades/bydate"


<div class="block-header">
    Closed Trades - Date
</div>

<ClosedTradesMenu></ClosedTradesMenu>


<div class="notebox">
    <EditForm Model="@ClosedTradeQueryModel" OnValidSubmit="@GetTrades">
        <div class="row p-3">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="col">
                <div class="form-group">
                    <label for="year">Enter Date as YYYY-MM-DD</label>
                    <InputDate id="year" class="form-control" @bind-Value="ClosedTradeQueryModel.EndDate" />
                </div>
            </div>            

            <div class="col align-middle">
                <div class="form-group">
                    <button type="submit" class="btn btn-success m-2">Search</button>
                </div>
            </div>
        </div>
    </EditForm>
</div>
<ClosedTradeGrid Trades=@_trades />